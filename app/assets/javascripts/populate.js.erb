populateLocalOffers = function(rates) {

  if (rates.worst.error || $.isEmptyObject(rates.best.buy) || $.isEmptyObject(rates.best.sell) || rates.best.buy.error || rates.best.sell.error) {
    snack('No offer for these criteria. <br> Try changing currencies or location', {button: 'ok', klass: 'oops', link: {page: 'exchanges', pane: 'search'}});
    return(null);
  }

  var transaction = value_of('transaction');
//console.log('populateLocalOffers. Transaction: ' + transaction, rates);

  var best_rate = rates['best'][transaction][transaction];
  var best_rated_currency = rates['best'][transaction]['rated_currency'];
  var worst_rate = rates['worst'][transaction];
  var worst_rated_currency = rates['worst']['rated_currency'];
  var count = rates['count'];

  var populated_value = clean(value_of(other(calculated)));
  var calculated_currency = value_of(twin(calculated));

  var best_value = best_rated_currency == calculated_currency ? populated_value * best_rate : populated_value / best_rate;
  var worst_value = worst_rated_currency == calculated_currency ? populated_value * worst_rate : populated_value / worst_rate;
  var gain_value = (worst_value - best_value) * (calculated == 'buy_amount' ? -1 : 1);

  formElement(calculated).autoNumeric('set', best_value);
  $('[data-model=local][data-field=worst_amount]').autoNumeric('set', worst_value);
  $('[data-model=local][data-field=worst_amount]').autoNumeric('set', worst_value);
  $('[data-model=local][data-field=worst_saving]').autoNumeric('set', gain_value);
  $('[data-model=local][data-field=count]').html(count);

  if (gain_value < 0) $('.search_line.worst').css('visibility', 'hidden');

  return(best_value);

};

