<div class="search">

  <div class="search_line">

    <div class="form-group icon"><i class="material-icons">language</i></div>

    <div class="form-group label_parent">
      <div class="label buy_label">I need</div>
    </div>

    <div class="form-group buy_currency label-floating select">
      <label for="buy_currency" class="control-label">Currency</label>
      <select id="buy_currency" data-model="search" data-field="buy_currency" data-symboltarget="buy_amount" name="search[buy_currency]" class="currency_select select optional text-center form-control">
        <option selected disabled hidden value=''></option>
        <option data-symbol="$ "  value="USD">USD</option>
        <option data-symbol="€ "  value="EUR">EUR</option>
        <option data-symbol="￡ " value="GBP">GBP</option>
        <option data-symbol="$ "  value="AUD">AUD</option>
        <option data-symbol="$ "  value="CAD">CAD</option>
        <option data-symbol="￥ " value="JPY">JPY</option>
        <option data-symbol="¥ " value="CNY">CNY</option>
        <option data-symbol="$ " value="HKD">HKD</option>
        <option data-symbol="₪ " value="ILS">ILS</option>
        <option data-symbol="kr " value="NOK">NOK</option>
      </select>
      <span class="form-control text-right"><i class="material-icons pull-right">arrow_drop_down</i></span>
    </div>

    <div class="form-group buy_amount label-floating">
      <label for="buy_amount" class="control-label">Amount</label>
      <input type="tel" pattern="\d*" id="buy_amount" data-model="search" data-field="buy_amount" data-autonumeric="true" data-symbolsource="buy_currency" name="search[buy_amount]" class="form-control">
      <p class="help-block"></p>
    </div>

  </div>

  <div class="search_line">

    <div class="form-group label_parent">
      <div class="label pay_label">I pay</div>
    </div>

    <div class="form-group pay_currency label-floating select">
      <label for="pay_currency" class="control-label">Currency</label>
      <select id="pay_currency" data-model="search" data-field="pay_currency" data-symboltarget="pay_amount" name="search[pay_currency]" class="currency_select select optional text-center form-control">
        <option selected disabled hidden value=''></option>
        <option data-symbol="￡ " value="GBP">GBP</option>
        <option data-symbol="€ " value="EUR">EUR</option>
        <option data-symbol="$ " value="USD">USD</option>
        <option data-symbol="$ " value="AUD">AUD</option>
        <option data-symbol="$ " value="CAD">CAD</option>
        <option data-symbol="￥ " value="JPY">JPY</option>
        <option data-symbol="¥ " value="CNY">CNY</option>
        <option data-symbol="$ " value="HKD">HKD</option>
        <option data-symbol="₪ " value="ILS">ILS</option>
        <option data-symbol="kr " value="NOK">NOK</option>
      </select>
      <span class="form-control text-right"><i class="material-icons pull-right">arrow_drop_down</i></span>
    </div>

    <div class="form-group pay_amount label-floating">
      <label for="pay_amount" class="control-label">Amount</label>
      <input type="tel" pattern="\d*" id="pay_amount" data-model="search" data-field="pay_amount" data-autonumeric="true" data-symbolsource="pay_currency" name="search[pay_amount]" class="form-control">
      <p class="help-block"></p>
    </div>

  </div>


  <div class="search_line">
    <div class="form-group flex_center">
      <div class="label">Pay with</div>
      <div class="radio">
        <label class="label">
          <input type="radio" name="search[service_type]" value="delivery" checked="">
          Delivery
        </label>
      </div>
      <div class="radio">
        <label class="label">
          <input type="radio" name="search[service_type]" value="pickup" checked="">
          Pick-up
        </label>
      </div>
    </div>
  </div>


  <div class="search_line">
    <div class="togglebutton">
      <label class="flex_between">
        <div class="label">Deliver to/Find the best offer where I'm at right now</div>
        <input type="checkbox" checked="">
        <span class="toggle"></span>
      </label>
    </div>
  </div>

  <div class="search_line">
    <div class="flex_center form-group location label-floating">
      <!--
              <label for="location" class="control-label">Where to look for</label>
      -->
      <label for="location" class="control-label">Deliver to/Find the best offer in</label>
      <span class="clear label"><i class=material-icons>cancel</i></span>
      <input type="text label" id="location" data-model="search" data-field="location" data-searchbox="true" name="search[location]" class="text-center location form-control">
      <span class="clear label"><i class=material-icons>cancel</i></span>
    </div>
  </div>

  <div class="search_line">
    <div class="label">On</div>
    <div class="label">At</div>
  </div>
  <div class="search_line rate_comparison">
    <div class="rate_comparison_text">Our rate:</div>
    <div class="rate_comparison_figure">1.2205</div>
    <div class="rate_comparison_text">High-street rate:</div>
    <div class="rate_comparison_figure">1.3800</div>
  </div>


  <div class="search_line">
    <div class="form-group flex_center">
      <div class="label">Pay with</div>
      <div class="radio">
        <label class="label">
          <input type="radio" name="search[payment_method]" value="Cash" checked="">
          Cash (will cancel delivery)
        </label>
      </div>
      <div class="radio">
        <label class="label">
          <input type="radio" name="search[payment_method]" value="Credit Card" checked="">
          Credit Card
        </label>
      </div>
    </div>
  </div>





  <div class="search_line invoke flex_center">
    <button type="submit" class="action btn cta" data-ajax="searches">pay/find offers</button>
  </div>

  <%= render partial: 'slidebar', locals: {swiper: 'swiperSearch', left: '', right: 'other'} %>
</div>