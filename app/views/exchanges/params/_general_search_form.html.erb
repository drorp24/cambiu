  	<div class="hidden" style="display:none">
  		<input type="hidden" name="latitude" class="location" id="latitude" data-field="user_lat">
  		<input type="hidden" name="longitude" class="location" id="longitude" data-field="user_lng">
  		<input type="hidden" name="geocoded_location" id="geocoded_location" data-field="location">
  		<input type="hidden" name="sort" id="sort" data-field="sort">
  		<input type="hidden" name="searched_location" id="searched_location" data-field="location">
  		<input type="hidden" name="actual_pay_amount" id="actual_pay_amount" data-field="actual_pay_amount">
        <input type="hidden" name="distance" data-field="distance">
        <input type="hidden" name="fetch" data-field="fetch">
	</div>

  	<div id="search_div" class="form-group col-md-1 col-xs-12" class="form-group">
		<button id="search_button" data-href="exchanges/list" data-href-page="exchanges" data-herf-id='' data-href-pane="summary" class="form-control btn btn-cambiu" type="submit">Find</button>
	</div>

  <div class="validation_errors">
  </div>

</form>


</div>