<!--   Exchange row template  -->
<div class="exchange_row template" style="display: none;">
  <div class="list-group-item directions"

       <% if request.variant.include? :desktop %>
       data-toggle                                 = 'popover'
       data-content                                = 'Select any offer then click to lock your rate'
       data-placement                              = 'top'
       data-trigger                                = 'manual'
       data-animation                              = true
       <% end %>

       data-href                                   = ''
       data-href-page                              = 'exchanges'
       data-href-id                                = ''
       data-href-pane                              = 'deal'

       data-model                                  = 'exchange'
       data-service-type                           = ''
       data-delivery-tracking                      = 'null'
       data-delivery-redirect-if-selected          = 'null'
       data-exchange-selection                     = 'true'
       data-exchangeid                             = ''
       data-voucher                                = 'true'
       data-exchange-name                          = ''
       data-lat                                    = ''
       data-lng                                    = ''
       >

    <div class="row tag_row">
      <div>
        <div class="tag col-md-9 col-xs-9">
          <div class="best_at label label-default"></div>
        </div>
        <div class="exchange_icon col-md-2 col-xs-2" style="display: none">
          <%= image_tag 'award1.gif' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="middle-parent col-md-11 col-xs-11">
        <div class="middle-child">
          <div class="name"></div>
        </div>
      </div>
    </div>


    <div class="row">

      <div class="middle-parent col-md-3 col-xs-3">
        <div class="middle-child">
          <div class="service_type"></div>
          <div class="distance"></div>
        </div>
      </div>


      <div class="middle-parent col-md-4 col-xs-4 col-md-offset-3 col-xs-offset-3">
        <div class="middle-child">
          <span class="you" style="display:none"></span>
          <div class="quote text-center"></div>
        </div>
      </div>

      <div class="middle-parent col-md-1 col-xs-1 getit_parent">
        <div class="middle-child">
          <i class="list_icon fa fa-chevron-right"></i>
        </div>
      </div>
    </div>

