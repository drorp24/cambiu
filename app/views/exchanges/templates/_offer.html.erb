<div class="offerPane">

  <div class="item">
    <div id="streetview" class="streetview"></div>
  </div>

  <div class="data item">

    <div class="rating_and_reviews flex_between">
      <input data-model="exchange" data-field="rating" class="form-control pull-left">
      <div class="reviews" data-href-page="exchanges" data-href-id="curr" data-href-pane="reviews" data-populate=true>
        <span data-model="exchange" data-field="reviews"></span>
        <span class="review_word">reviews</span>
      </div>
    </div>

    <%= render 'exchanges/templates/pickup' %>

    <div class="open_and_phone flex_between">
      <div class="open"><a>Open</a></div>
      <div class="phone_icon">
        <a><i class="material-icons">phone</i></a>
      </div>
    </div>

    <%= render 'exchanges/templates/deal' %>

    <div class="no_deal_section flex_center">

      <div class="norates">
        <i class="no_rates_icon material-icons">more_horiz</i>
        <p class="no_rates_action flex_center"><i class="material-icons">help_outline</i></p>
      </div>

    </div>

    <div class="expiry">
      <span class="expiry_text">Expires</span>
      <span class="expiry_time" data-model="exchange" data-field="expiry_time">4 hrs</span>
    </div>

    <div class="actions_line flex_between">
      <div class="lessmore icon"></div>
      <button class="btn-flat waves-effect more action" data-href-pane="order" data-href-id="curr" data-href-delay="true"></button>
      <div class="lessmore icon" data-action></div>
    </div>

  </div>

  <div class="order_button_container flex_center">

    <div class="ordering fab flex_center column" data-href-pane="order" data-href-id="curr" data-href-delay="true">
      <button class="btn-floating waves-effect">
        <i class="material-icons flex_center">shopping_cart</i>
        <div class="fab_text">Order</div>
      </button>
    </div>

<!--
    <div class="order_word"></div>
    <div class="flex_center">
      <button class="btn order_button">
        <i class="material-icons flex_center">shopping_cart</i>
       </button>
    </div>
-->

  </div>

</div>
