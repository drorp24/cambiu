<div class="swiper-slide okay_required flex_center column" data-hash="delivery_location" data-index="4">

  <div class="iform_icon"><%= image_tag 'building.png' %></div>
  <div class="iform_title_subtitle flex_center column">
    <div class="iform_title"><%= t 'isearch.delivery_location.title' %></div>
    <div class="iform_subtitle"><%= t 'isearch.delivery_location.subtitle' %></div>
  </div>

  <div class="iform_content">

    <%= render '/exchanges/isearch/location' %>
    <div class="flex_center last_line">

      <div class="md-form">
        <input type="text" name="user[entry]" id="user_entry" class="form-control text-start" data-update="user"/>
        <label for="user_entry" class="control-label"><%= t 'user.entry' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[floor]" id="user_floor" class="form-control text-start" data-update="user"/>
        <label for="user_floor" class="control-label"><%= t 'user.floor' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[apartment]" id="user_apartment" class="form-control text-start" data-update="user"/>
        <label for="user_apartment" class="control-label"><%= t 'user.apartment' %></label>
      </div>
    </div>

    <%= render '/exchanges/isearch/okButton' %>

  </div>


</div>