<div class="middle-parent col-md-6 col-xs-5">
    <div class="middle-child">
        <div class="name"></div>
        <div id="distance">
          <span class="distance"></span>
        </div>
    </div>
</div>
<div class="middle-parent col-md-3 col-xs-3">
	<div class="middle-child">
		<div class="quote col-md-12 col-xs-12"></div>
		<div class="comparison" style="display: none;">
			<span class="comparison-d desktop_only">Your gain: </span>
			<span class="comparison-m mobile_only">+ </span>
			<span data-field="gain_amount" class="comparison-amount"></span>
		</div>			
	</div>
</div>
<div class="middle-parent col-md-2 col-xs-2 getit_parent">
	<div class="getit middle-child">
        <%= render partial: 'order_form', locals: {status: 'offer'} %>
    </div>
	<div class="close middle-child" style="display: none;"><i class="fa fa-times"></i></div>
</div>
