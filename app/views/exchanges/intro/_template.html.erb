<div class="swiper-slide intro-slide fullscreen">


  <div class="version"></div>

  <div class="illustration">
    <% if illustration %>
      <%= image_tag illustration %>
    <% else %>
      Illustration
    <% end %>
  </div>

  <div class="message">
    <% if title %>
      <p class="title"><%= title %></p>
    <% end %>
    <p class="text"><%= text %></p>
    <% if getOffer %>
        <button class="getOffer btn" data-href-page="exchanges" data-href-pane="map">Get an offer</button>
    <% end %>
  </div>

  <%= render partial: 'slidebar', locals: {swiper: 'swiperIntro', left: left, right: right} %>

</div>
