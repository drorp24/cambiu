<div id="exchange_voucher" class="pane transition flip" data-pane="voucher" data-model="exchange" data-id='' style="display: <%= params[:controller] == 'exchanges' && params[:display] == 'voucher' ? 'block' : 'none' %>">

  <div class="row">
    <div class="voucher_heading clearfix">
      <div class="col-xs-12 col-md-12">
        <div class="voucher_title">
          <span data-model="order" data-field="service_type" style="display: none"></span>
          <span>Voucher</span>
          <span data-model="order" data-field="id" style="display: none"></span>
          <span class="voucher_number" data-model="order" data-field="voucher"></span>
        </div>
        <div class="voucher_validity" style="display: none">
          <span><%= fa_icon "clock-o", text: "  Valid until", left: true %></span>
          <span class="voucher_expiry" data-model="order" data-field="expiry_s"></span>
        </div>
      </div>
    </div>
  </div>

  <div class="exchange_order">
    <div class="row">
      <div class="col-md-12 col-xs-12 order_wrapper">
          <div class="order">
            <span data-model="exchange" data-field="pay_amount"></span>
            <span data-model="exchange" data-field="pay_currency"></span>
            <span class="exchange_icon"><%= fa_icon "caret-right" %></span>
            <span data-model="exchange" data-field="buy_amount"></span>
            <span data-model="exchange" data-field="buy_currency"></span>
          </div>
          <div class="subject_to_change"></div>
      </div>
    </div>
  </div>

  <div>
      <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="rate_expiry">
              <span>Rate valid through</span>
              <span class="voucher_expiry" data-model="order" data-field="expiry_s"></span>
            </div>
        </div>
      </div>
  </div>


  <div class="exchange_banner text-center">
    <div class="row">
       <div class="col-md-12 col-xs-12">
          <div class="pickup_title text-center strike">
            <span>Pickup at</span>
          </div>
          <div class="es_name" data-model="exchange" data-field="name_s"></div>
          <div class="es_address" data-model="exchange" data-field="address"></div>
          <div class="es_opening_hours" data-model="exchange" data-field="open_today"></div>
      </div>
    </div>
  </div>

  <div class="center_message">
    <div class="row">
      <div class="qr_code col-xs-12">

<!--
        Present your voucher at the counter to get cashback
-->
        <%= image_tag "https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl=cambiu%20rocks!" %>
      </div>
    </div>
  </div>


   <div class="exchange_identification">
    <div class="row">
         <div class="col-md-12 col-xs-12">
          <div class="identification middle-parent clearfix">
            <div class="identification_icon desktop_only middle-parent col-md-2 col-xs-2">
              <%= image_tag 'id_icon.png', class: 'middle-child' %>
            </div>
           </div>
        </div>
     </div>
  </div>




</div>