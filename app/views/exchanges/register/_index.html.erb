<div class="pane" data-pane="register">
  <%= render partial: 'navbar', locals: {left_pane: 'none', left_icon: 'none', center: 'Register', right_pane: 'none', right_icon: 'none'} %>

  <form class="registration" id="registration_form" data-t-empty="<%= t 'user.empty' %>">

    <div class="md-form">
      <input type="email" name="user[email]" id="user_email" class="form-control" required/>
      <label for="user_email" class="control-label text-right" data-error="<%= t 'user.email_error' %>"><%= t 'user.email' %></label>
    </div>

    <div class="md-form">
      <input type="password" name="user[password]" id="user_password" class="form-control" />
      <label for="user_password" class="control-label text-right"><%= t 'user.password' %></label>
    </div>

    <div class="md-form">
      <input type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" />
      <label for="user_password_confirmation" class="control-label text-right"><%= t 'user.password_confirmation' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[first_name]" id="user_first_name" class="form-control" required/>
      <label for="user_first_name" class="control-label text-right"><%= t 'user.first_name' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[last_name]" id="user_last_name" class="form-control" required/>
      <label for="user_last_name" class="control-label text-right"><%= t 'user.last_name' %></label>
    </div>

    <div class="md-form">
      <input type="tel" name="user[phone]" id="user_phone" class="form-control" required/>
      <label for="user_phone" class="control-label text-right"><%= t 'user.phone' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[company]" id="user_company" class="form-control" />
      <label for="user_company" class="control-label text-right"><%= t 'user.company' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[city]" id="user_city" class="form-control"  data-model="user" data-field="city"/>
      <label for="user_city" class="control-label text-right"><%= t 'user.city' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[street]" id="user_street" class="form-control"  data-model="user" data-field="street"/>
      <label for="user_street" class="control-label text-right"><%= t 'user.street' %></label>
    </div>

    <div class="flex_center last_line">
      <div class="md-form">
        <input type="text" name="user[house]" id="user_house" class="form-control"  data-model="user" data-field="house"/>
        <label for="user_house" class="control-label"><%= t 'user.house' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[entry]" id="user_entry" class="form-control" />
        <label for="user_entry" class="control-label"><%= t 'user.entry' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[floor]" id="user_floor" class="form-control" />
        <label for="user_floor" class="control-label"><%= t 'user.floor' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[apartment]" id="user_apartment" class="form-control" />
        <label for="user_apartment" class="control-label"><%= t 'user.apartment' %></label>
      </div>
    </div>

    <div class="hidden">
      <input type="hidden" name="search[id]" data-model="search" data-field="id">
    </div>

    <div class="md-form submit flex_center">
      <input type="submit" class="blue primary btn waves-effect" data-action="paymentFlow" value="<%= t 'user.next' %>">
    </div>

  </form>


</div>