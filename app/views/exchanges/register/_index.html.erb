<div class="pane" data-pane="register">
  <%= render partial: 'navbar', locals: {left_pane: 'back', left_icon: 'arrow_back', center: 'Register', right_pane: 'none', right_icon: 'none'} %>

  <form class="registration" id="registration_form" data-t-empty="<%= t 'user.empty' %>">

    <div class="md-form">
      <input type="email" name="user[email]" id="user_email" class="form-control" required/>
      <label for="user_email" class="control-label text-right" data-error="<%= t 'user.email_error' %>"><%= t 'user.email' %></label>
    </div>

    <div class="md-form">
      <input type="password" name="user[password]" id="user_password" class="form-control" required/>
      <label for="user_password" class="control-label text-right"><%= t 'user.password' %></label>
    </div>

    <div class="md-form">
      <input type="password" name="user[password_repeat]" id="user_password_repeat" class="form-control" required/>
      <label for="user_password_repeat" class="control-label text-right"><%= t 'user.password_repeat' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[first_name]" id="user_first_name" class="form-control" required/>
      <label for="user_first_name" class="control-label text-right"><%= t 'user.first_name' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[last_name]" id="user_last_name" class="form-control" required/>
      <label for="user_last_name" class="control-label text-right"><%= t 'user.last_name' %></label>
    </div>

    <div class="md-form">
      <input type="tel" name="user[phone]" id="user_phone" class="form-control" required/>
      <label for="user_phone" class="control-label text-right"><%= t 'user.phone' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[company]" id="user_company" class="form-control" required/>
      <label for="user_company" class="control-label text-right"><%= t 'user.company' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[city]" id="user_city" class="form-control" required/>
      <label for="user_city" class="control-label text-right"><%= t 'user.city' %></label>
    </div>

    <div class="md-form">
      <input type="text" name="user[street]" id="user_street" class="form-control" required/>
      <label for="user_street" class="control-label text-right"><%= t 'user.street' %></label>
    </div>

    <div class="flex_center last_line">
      <div class="md-form">
        <input type="number" name="user[house_no]" id="user_house_no" class="form-control" required/>
        <label for="user_house_no" class="control-label text-right"><%= t 'user.house_no' %></label>
      </div>

      <div class="md-form">
        <input type="text" name="user[entry]" id="user_entry" class="form-control" required/>
        <label for="user_entry" class="control-label text-right"><%= t 'user.entry' %></label>
      </div>

      <div class="md-form">
        <input type="number" name="user[floor]" id="user_floor" class="form-control" required/>
        <label for="user_floor" class="control-label text-right"><%= t 'user.floor' %></label>
      </div>

      <div class="md-form">
        <input type="number" name="user[appartment]" id="user_appartment" class="form-control" required/>
        <label for="user_appartment" class="control-label text-right"><%= t 'user.appartment' %></label>
      </div>
    </div>

    <div class="md-form submit flex_center">
      <button type="submit" class="blue primary btn waves-effect" data-action="createUser" data-href-pane="payment" data-href-id="curr"><%= t 'user.next' %></button>
    </div>

  </form>


</div>