<div class="above_fold" data-clicked="marketing messages" style="display: <%= (request.url.include? 'exchanges') ? 'none' : 'block' %>" >
	<div class="row homepage_background">
		<div class="main clearfix">
			<div class="marketing col-xs-12 col-md-6 col-md-offset-1">
				<div class="pre">
					<p></p>
				</div>
				<div class="heading">
					<p>Find the best rate around you with cambiu. Easy to use. Simple and free.</p>
				</div>
                <div class="flow">
                  <div class="row">
                    <div class="col-xs-3 middle-parent">
                      <span class="middle-child">Enter <br/>amount</span>
                    </div>
                    <div class="col-xs-1 middle-parent">
                      <span class="middle-child"><i class="homepage_arrow fa fa-arrow-circle-right"></i></span>
                    </div>
                    <div class="col-xs-3 middle-parent">
                      <span class="middle-child">Choose <br/>exchange</span>
                    </div>
                    <div class="col-xs-1 middle-parent">
                      <span class="middle-child"><i class="homepage_arrow fa fa-arrow-circle-right"></i></span>
                    </div>
                    <div class="col-xs-3 middle-parent">
                      <span class="middle-child">Pickup <br/>your money</span>
                    </div>
                  </div>
 				</div>
			</div>
			<div class="moneybox col-xs-12 col-md-3 col-md-offset-1">
				<%= render 'search_form' %>
			</div>
		</div>
	</div>
<!--
	<div class="row rates_banner">
		<%= image_tag "rates.gif" %>
	</div>
-->
</div>
