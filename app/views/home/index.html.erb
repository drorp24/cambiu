<script>
$(document).ready(function() {
	

	$('#home_form #actual_pay_amount').val($('#home_form #pay_amount_val').val());
	$('#home_form #pay_amount').change(function() {
		$('#home_form #actual_pay_amount').val($('#home_form #pay_amount_val').val());
	})
	
	$('#location_link').click(function() {
