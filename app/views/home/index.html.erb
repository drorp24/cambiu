<div id="home_a">
	<div class="container-fluid photo_background">
		<div id="home_container" class="row">
			<div id="home_message" class="col-md-5 col-md-offset-1 col-xs-12 text-center">
				<div  id="message_header"><%= t :title, scope: [@landing], default: 'Best currency exchange deals near you' %></div>
				<div id="message_remainder">
					<%= t :text, scope: [@landing], default: 'Save on high commission fees with a few simple clicks. Anytime. Anywhere.' %>
				</div>
				<div id="message_bottom">
					<div class="fb-like" data-href="http://www.cambiu.com" data-width="100px" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
				</div>
			</div>
			<div id="home_form" class="col-md-4 col-md-offset-1 col-xs-12 text-center">
				<form id="search_form" action="/exchanges" class="form-inline" method="post" novalidate>
					<div class="row">
					  	<div class="form-group col-md-5 col-xs-5">
							<select id="pay_currency" name="pay_currency" class="currency_select select optional text-center form-control"
							 data-analyze="change" data-activity="Search" data-key1="searched" data-val1="currency" data-key2="type" data-val2="local" data-key3="currency">
								<option data-symbol="￡ " value="GBP" selected="selected">GBP</option>
								<option data-symbol="€ " value="EUR">EUR</option>
								<option data-symbol="$ " value="USD">USD</option>
								<option data-symbol="$ " value="AUD">AUD</option>
								<option data-symbol="$ " value="CAD">CAD</option>
								<option data-symbol="￥ " value="JPY">JPY</option>
							</select>
						</div>
						<div id="exchange_symbol" class="col-md-2 col-xs-2">
							<i class="fa fa-hand-o-right"></i>
						</div>
					  	<div class="form-group col-md-5 col-xs-5">
							<select id="buy_currency" name="buy_currency" class="select optional text-center form-control"
							 data-analyze="change" data-activity="Search" data-key1="searched" data-val1="currency" data-key2="type" data-val2="foreign" data-key3="currency">
								<option value="USD" selected="selected">USD</option>
								<option value="EUR">EUR</option>
								<option value="GBP">GBP</option>
								<option value="AUD">AUD</option>
								<option value="CAD">CAD</option>
								<option value="JPY">JPY</option>
							</select>
					  	</div>
				  	</div>
				  	<div class="row">
						<div class="form-group col-md-12 col-xs-12">
							<div id="pay_amount_help">
								<div id="pay_amount_text">I want to change</div>
							</div>
							<input type="text" pattern="\d*" id="pay_amount" data-autonumeric="true" name="pay_amount" class="form-control" placeholder="Enter amount" value="1000"
							 data-analyze="change" data-activity="Search" data-key1="searched" data-val1="amount" data-key2="type" data-val2="local" data-key3="amount">
							<div id="pay_amount_icon">
								<div id="pay_amount_img"><i class="fa fa-pencil"></i></div>
							</div>
					  	</div>
				  	</div>
				  	<div class="row">
					  	<div class="col-md-12 col-xs-12">
						  	<div class="hidden" style="display:none">
						  		<input type="hidden" name="latitude" id="latitude">
						  		<input type="hidden" name="longitude" id="longitude">
						  		<input type="hidden" name="geocoded_location" id="geocoded_location">
						  		<input type="hidden" name="distance">
						  		<input type="hidden" name="sort" value="quote">
						  		<input type="hidden" name="landing" value="<%= @landing %>">
						  		<input type="hidden" name="actual_pay_amount" id="actual_pay_amount">
						  		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
							</div>
						  	<div id="search_div" class="form-group">
								<button id="search_button" class="form-control btn btn-success" type="submit"><%= t :search_button, scope: [@landing], default: 'Exchange' %></button>
							</div>
							<div id="location_text" class="form-group">
								You are at <span id="current_address"></span><a href="#" id="location_link" data-link="Change location">Change location</a>
							</div>
							<div id="location_input" class="form-group" style="display: none;">
								<input type="text" id="location_search" name="location_search" placeholder="Current location" class="form-control"
							 	data-analyze="change" data-activity="Search" data-key1="searched" data-val1="location" data-key2="type" data-val2="search" data-key3="location">
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>			
	</div>
</div>		
