<% if request.domain == 'cambiu.com' %>
    <%= render 'navbar_cambiu' %>
<% elsif request.domain == 'currency-net.com' %>
    <%= render 'navbar_currency_net' %>
<% elsif request.domain == 'localhost' %>
    <% if @mode == 'search' %>
        <%= render 'navbar_cambiu' %>
    <% elsif @mode == 'exchange' %>
        <%= render 'navbar_currency_net' %>
    <% end %>
<% end %>