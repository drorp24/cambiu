<%= simple_form_for(Search.new, defaults: {input_html: {class: 'form-control'}, label: false}, html: {:"way-data" => "params1", :'way-persistent' => '', novalidate: true}) do |f| %>
	
	<div class="row">
		<div class="form-group col-md-8 col-xs-7">
			<%= f.input :pay_amount, input_html: {data: {autonumeric: true, symbolsource: 'search_pay_currency'}, pattern: "\d*"}, placeholder: "  I have:" %>
		</div>
		<div class="form-group col-md-4 col-xs-5">
			<%= f.input :pay_currency, collection: Currency.major_with_symbol, input_html: {class: 'currency_select form-control', data: {header: 'My currency', style: 'btn-danger', symboltarget: 'search_pay_amount'}}, selected: "GBP",  include_blank: false %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-8 col-xs-7">
			<%= f.input :buy_amount, input_html: {data: {autonumeric: true, symbolsource: 'search_buy_currency'}, pattern: "\d*"}, placeholder: "  I need:" %>
		</div>
		<div class="form-group col-md-4 col-xs-5">
			<%= f.input :buy_currency, collection: Currency.major_with_symbol, input_html: {class: 'currency_select form-control', data: {header: 'Desired currency', style: 'btn-danger', symboltarget: 'search_buy_amount'}}, selected: "USD", include_blank: false %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-12 col-xs-12">
			<%= f.input :location, placeholder: '  Look for deals in...' %>
		</div>
	</div>
	
	<div class="hidden_fields">
			<%= f.input_field :user_lat, 		as: :hidden %>
			<%= f.input_field :user_lng, 		as: :hidden %>
			<%= f.input_field :user_location, 	as: :hidden %>
			<%= f.input_field :distance, 		as: :hidden %>
			<%= f.input_field :distance_unit, 	as: :hidden %>
			<%= f.input_field :sort, 			as: :hidden %>
	</div>

	<div class="row">
		<div class="form-group col-md-12 col-xs-12">
			<%= image_tag 'logo_no_text.png' %>
			<%= f.button :submit, "Get the best rate" %>
		</div>
	</div>
	
	<div class="after_submit">
		<p>We give users more than 94.6% profit for their money! </p>
	</div>
	
<% end %>