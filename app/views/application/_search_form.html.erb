<%= simple_form_for Search.new do |f| %>
	
	<div class="row">
		<div class="form-group col-md-8 col-xs-7">
			<%= f.input :pay_amount, input_html: {data: {autonumeric: true, symbolsource: 'search_pay_currency'}}, placeholder: "  I have:", label: false %>
		</div>
		<div class="form-group col-md-4 col-xs-5">
			<%= f.input :pay_currency, collection: Currency.major_with_symbol, input_html: {class: 'currency_select ', data: {header: 'My currency', style: 'btn-danger', symboltarget: 'search_pay_amount'}}, selected: "GBP", label: false,  include_blank: false %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-8 col-xs-7">
			<%= f.input :buy_amount, input_html: {data: {autonumeric: true, symbolsource: 'search_buy_currency'}}, placeholder: "  I need:", label: false %>
		</div>
		<div class="form-group col-md-4 col-xs-5">
			<%= f.input :buy_currency, collection: Currency.major_with_symbol, input_html: {class: 'currency_select ', data: {header: 'Desired currency', style: 'btn-danger', symboltarget: 'search_buy_amount'}}, selected: "USD", label: false, include_blank: false %>
		</div>
	</div>

<% end %>