<%- model_class = Rate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:exchange_id) %>:</strong></dt>
  <dd><%= @rate.exchange_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buy_cents) %>:</strong></dt>
  <dd><%= @rate.buy_cents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buy_currency) %>:</strong></dt>
  <dd><%= @rate.buy_currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pay_cents) %>:</strong></dt>
  <dd><%= @rate.pay_cents %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pay_currency) %>:</strong></dt>
  <dd><%= @rate.pay_currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source) %>:</strong></dt>
  <dd><%= @rate.source %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rates_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rate_path(@rate), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rate_path(@rate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
