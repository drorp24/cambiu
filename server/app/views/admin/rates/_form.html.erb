<%= simple_form_for @rate, html: {class: 'form-inline'}, url: admin_exchange_rates_path(params[:exchange_id]) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
	  <%= f.input :buy_currency %>
	  <%= f.input :pay_currency %>
	  <%= f.input :pay_cents %>
  </div>

  <div class="form-actions">
  	<%= f.button :submit %>
  </div>

<% end %>